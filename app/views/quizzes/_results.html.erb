<div class="quiz-results-table-container desktop-view">
  <div class="table-responsive">
    <table class="quiz-results-table table table-bordered w-100">
      <thead>
        <tr>
          <th>問題</th>
          <th>あなたの回答</th>
          <th>正解</th>
          <th>結果</th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: 'quiz_result_partial', collection: @questions, as: :question %>
      </tbody>
    </table>
  </div>
</div>

<div class="quiz-results-mobile mobile-view">
  <%= render partial: 'quiz_result_mobile_partial', collection: @questions, as: :question %>
</div>
