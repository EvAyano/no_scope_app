<div class="hero-section">
  <div class="hero-titles">
    <h1 class="hero-title">ログイン</h1>
  </div>
</div>

<div class="background-container">
  <section class="account-management-section">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="account-details-card card bg-dark text-white mb-4">
            <div class="card-body">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation" }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>

                <!-- メールアドレス -->
                <div class="mb-3">
                  <%= f.label :email, "メールアドレス", class: "form-label" %>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                </div>

                <!-- パスワード -->
                <div class="mb-3">
                  <%= f.label :password, "パスワード", class: "form-label" %>
                  <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
                </div>

                <!-- ログイン情報の保存 -->
                <% if devise_mapping.rememberable? %>
                  <div class="form-check mb-3">
                    <%= f.check_box :remember_me, class: "form-check-input", id: "remember_me" %>
                    <%= f.label :remember_me, "ログイン情報を保存する", class: "form-check-label" %>
                  </div>
                <% end %>

                <!-- ログインボタン -->
                <div class="d-flex justify-content-center">
                  <%= f.submit "ログイン", class: "btn btn-primary px-5" %>
                </div>
              <% end %>

              <!-- パスワードリセットやアカウント作成リンク -->
              <div class="mt-3 text-center">
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
