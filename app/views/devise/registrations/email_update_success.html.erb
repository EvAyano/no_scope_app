<div class="hero-section my-page-hero-section"> 
  <div class="hero-titles my-page-hero">
    <div class="profile-image-wrapper">
      <% if current_user.avatar.attached? %>
        <%= image_tag current_user.avatar.variant(resize_to_limit: [150, 150]), class: "profile-image rounded-circle" %>
      <% else %>
        <%= image_tag "default_avatar.png", class: "profile-image rounded-circle", size: "150x150" %>
      <% end %>
    </div>
  </div>
</div>

<div class="background-container">
  <section class="account-management-section">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="account-details-card card bg-dark text-white mb-4">
            <div class="card-header text-center">
              <h2 class="mb-0">メールアドレスの更新</h2>
            </div>
            <div class="card-body text-center">
              <p class="mb-4">メールアドレスの更新が完了しました！</p>

              <%= link_to "プロフィールにもどる", edit_user_registration_path, class: "btn btn-primary px-5" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
