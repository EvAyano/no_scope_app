<div class="hero-section my-page-hero-section"> 
  <div class="hero-titles my-page-hero">
    <div class="profile-image-wrapper">
      <% if @user.avatar.attached? %>
        <%= image_tag @user.avatar.variant(resize_to_limit: [150, 150]), class: "profile-image rounded-circle" %>
      <% else %>
        <%= image_tag "default_avatar.png", class: "profile-image rounded-circle", size: "150x150" %>
      <% end %>
    </div>
  </div>
</div>

<div class="background-container">
  <section class="account-management-section">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="account-details-card card bg-dark text-white mb-4">
            <div class="card-header text-center">
              <h2 class="mb-0">プロフィール画像の編集</h2>
            </div>
            <div class="card-body">
              <%= form_with model: @user, url: update_user_avatar_path, local: true, html: { multipart: true, class: "needs-validation" } do |f| %>
                <%= render "devise/shared/error_messages", resource: @user %>

                <div class="mb-3">
                  <%= f.label :avatar, "新しいプロフィール画像を選択", class: "form-label" %>
                  <%= f.file_field :avatar, class: "form-control" %>
                </div>

                <div class="d-flex justify-content-end mt-4">
                  <%= link_to "プロフィールにもどる", edit_user_registration_path, class: "btn btn-secondary me-2" %>
                  <%= f.submit "更新する", class: "btn btn-primary px-5" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
