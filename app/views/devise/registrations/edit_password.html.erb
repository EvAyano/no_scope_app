<div class="hero-section my-page-hero-section"> 
  <div class="hero-titles my-page-hero">
    <div class="profile-image-wrapper">
      <% if @user.avatar.attached? %>
        <%= image_tag @user.avatar.variant(resize_to_limit: [150, 150]), class: "profile-image rounded-circle" %>
      <% else %>
        <%= image_tag "default_avatar.png", class: "profile-image rounded-circle", size: "150x150" %>
      <% end %>
    </div>
  </div>
</div>

<div class="background-container">
  <section class="account-management-section">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="account-details-card card bg-dark text-white mb-4">
            <div class="card-header text-center">
              <h2 class="mb-0">パスワードを変更</h2>
            </div>
            <div class="card-body">
              <%= form_for(resource, as: resource_name, url: update_custom_user_password_path(resource_name), html: { method: :put, class: "needs-validation" }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>

                <!-- 現在のパスワード -->
                <div class="mb-3">
                  <%= f.label :current_password, "現在のパスワード", class: "form-label" %>
                  <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
                </div>

                <!-- 新しいパスワード -->
                <div class="mb-3">
                  <%= f.label :password, class: "form-label d-flex align-items-center" do %>
                    新しいパスワード
                    <% if @minimum_password_length %>
                      <span class="ms-2">(最低 <%= @minimum_password_length %> 文字)</span>
                    <% end %>
                  <% end %>
                  <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
                </div>

                <!-- 新しいパスワード（確認） -->
                <div class="mb-3">
                  <%= f.label :password_confirmation, "新しいパスワード（確認用）", class: "form-label" %>
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
                </div>

                <!-- ボタン -->
                <div class="d-flex justify-content-end mt-4">
                  <%= link_to "プロフィールにもどる", edit_user_registration_path, class: "btn btn-secondary me-2" %>
                  <%= f.submit "変更する", class: "btn btn-primary px-5" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
