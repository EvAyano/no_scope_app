<div class="hero-section">
  <div class="hero-titles">
    <h2 class="hero-subtitle">change email address</h2>
    <h1 class="hero-title">メールアドレスの変更</h1>
  </div>
</div>

<div class="background-container">
  <section class="account-management-section">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="account-details-card card bg-dark text-white mb-4">
            <div class="card-body">
              <%= form_for(resource, as: resource_name, url: update_user_email_path(resource_name), html: { method: :put, class: "needs-validation", id: "email-change-form", novalidate: true }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>

                <div class="mb-3">
                  <%= f.label :email, "新しいメールアドレス", class: "form-label" %>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", value: "" %>
                </div>

                <div class="d-flex flex-column flex-md-row justify-content-center mt-4">
                  <%= link_to "プロフィールにもどる", edit_user_registration_path, class: "btn btn-secondary me-md-2 mb-2 mb-md-0" %>
                  <%= f.submit "変更する", class: "btn btn-primary px-5" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
