<div class="hero-section my-page-hero-section"> 
  <div class="hero-titles my-page-hero">
    <%= link_to edit_user_avatar_path, class: "profile-image-wrapper" do %>
      <% if @user.avatar.attached? %>
        <%= image_tag @user.avatar.variant(resize_to_limit: [150, 150]), class: "profile-image rounded-circle" %>
      <% else %>
        <%= image_tag "default_avatar.png", class: "profile-image rounded-circle", size: "150x150" %>
      <% end %>
      <div class="hover-overlay">
        プロフィール画像の編集
      </div>
    <% end %>
  </div>
</div>




<div class="background-container">
  <section class="account-management-section">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-8">
        <div class="account-details-card card bg-dark text-white mb-4">
          <div class="card-header text-center">
            <h2 class="mb-0">プロフィール</h2>
          </div>
          <div class="card-body">
            <table class="profile-table w-100">
              <tr>
                <th>ニックネーム</th>
                <td>
                  <span><%= @user.nickname.presence || "未設定" %></span>
                  <%= link_to "変更", edit_user_nickname_path, class: "edit-link" %>
                </td>
              </tr>
              <tr>
                <th>メールアドレス</th>
                <td>
                  <span><%= @user.email %></span>
                  <%= link_to "変更", edit_user_email_path, class: "edit-link" %>
                </td>
              </tr>
              <tr>
                <th>パスワード</th>
                <td>
                  <span>********</span>
                  <%= link_to "変更", edit_custom_user_password_path, class: "edit-link" %>
                </td>
              </tr>
            </table>

            <!-- アクションボタン -->
            <div class="action-buttons mt-4 text-center">
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-danger me-2" %>
              <%= button_to "アカウント削除", user_registration_path, data: { confirm: "本当にアカウントを削除しますか？" }, method: :delete, class: "btn btn-outline-danger" %>
  <%= link_to 'アカウント削除', edit_user_registration_path, class: 'button', data: { confirm: '本当にアカウントを削除しますか？' } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
