<%= turbo_frame_tag "word_detail" do %>
  <h1><%= word.term %></h1>
  <p><strong>意味:</strong> <%= word.definition %></p>
  <p><strong>詳細:</strong> <%= word.explanation %></p>

  <%= turbo_frame_tag "new_list_flash" do %>
    <!-- 新規リスト作成の通知やエラーメッセージを表示 -->
  <% end %>

  <%= turbo_frame_tag "existing_list_flash" do %>
    <!-- 既存リストへの追加の通知やエラーメッセージを表示 -->
  <% end %>

  <%= turbo_frame_tag "new_list" do %>
    <%= render 'form', list: list, word: word %>
  <% end %>

  <%= turbo_frame_tag "existing_list" do %>
    <%= render 'words/lists', lists: current_user.lists, word: word %>
  <% end %>


<% end %>
