<% if flash[:notice] %>
  <%= turbo_stream.replace "flash_message" do %>
    <div class="alert alert-success">
      <%= flash[:notice] %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
<% elsif flash[:alert] %>
  <%= turbo_stream.replace "flash_message" do %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
<% end %>

