<div class="hero-section">
  <div class="hero-titles">
    <h2 class="hero-subtitle">Serch result</h2>
    <h1 class="hero-title">検索結果</h1>
  </div>
</div>

<div class="background-container">
  <section class="word-filter">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <%= turbo_frame_tag "word_list" do %>
            <%= turbo_frame_tag "word_detail" do %>
            <% end %>

            <% if message.present? %>
              <div class="message-container">
                <h5><%= message %></h5>
              </div>
            <% end %>

            <% if words.any? %>
              <div class="word-list">
                <%= render partial: "words/word_item", collection: words, as: :word %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </section>
</div>
