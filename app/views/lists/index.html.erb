<h1>Your LISTS</h1>

<% if @lists.any? %>
  <ul>
    <% @lists.each do |list| %>
      <li><%= link_to list.name, list_path(list) %> - <%= link_to '編集', edit_list_path(list) %> | <%= link_to '削除', list_path(list), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか?" } %></li>
    <% end %>
  </ul>
<% else %>
  <p>まだリストがありません</p>
<% end %>

<%= link_to '新しいリストを作成', new_list_path, class: 'button' %>
