<h1>Your LISTS</h1>

<%= render @lists_index_partial %>  

<h1>新規リスト作成</h1>

<% if @list.errors.any? %>
  <div class="alert">
    <ul>
      <% @list.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @list, local: true do |form| %>
  <div>
    <%= form.label :name, "リスト名" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.submit "作成する", class: "button" %>
  </div>
<% end %>
